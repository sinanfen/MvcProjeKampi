@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Kategori Ekleme Sayfası</h1>

@using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryName,, "", new { @class = "text-danger" })
        <br />
        @Html.Label("Açıklamayı yazınız.")
        @Html.TextAreaFor(x => x.CategoryDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryDescription, "", new { @class = "text-danger" })
        <br />
        <button onclick="setTimeout(myFunction, 3000);" id="btn1" class="btn btn-primary">Kaydet</button>
    </div>

}

<script>
    function myFunction() {
        alert('Hello');
    }
</script>

<script>
    $('#btn1').click(function () {
        swal({
            title: 'Başarılı',
            text: 'Kategori eklendi...',
            icon: 'success',
            timer: 2000,
            buttons: false,
        })
            .then(() => {
                dispatch(redirect('/'));
            })
    })
</script>


<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>

<script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
