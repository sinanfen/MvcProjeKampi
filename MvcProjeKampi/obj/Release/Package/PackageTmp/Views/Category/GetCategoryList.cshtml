@using EntityLayer.Concrete
@model List<Category>
@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<br />

<table class="table table-bordered table-hover">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Açıklama</th>
        <th>Durum</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.CategoryID</td>       
            <td>@x.CategoryName</td>       
            <td>@x.CategoryDescription</td>       
            <td>@x.CategoryStatus</td>       
        </tr>
    }
</table>

<br />
<a  class="btn btn-primary" href="/Category/AddCategory">Yeni Kategori</a>