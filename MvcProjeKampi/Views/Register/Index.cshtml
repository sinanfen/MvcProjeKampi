@model EntityLayer.Concrete.Admin
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Admin Kayıt</title>

    <!-- Font Icon -->
    <link href="~/AdminLTE-3.0.4/colorlib-regform-7/fonts/material-icon/css/material-design-iconic-font.min.css" rel="stylesheet" />

    <!-- Main css -->

    <link href="~/AdminLTE-3.0.4/colorlib-regform-7/css/style.css" rel="stylesheet" />
</head>
<body>

    <div class="main">

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Kayıt Ol</h2>
                        <form method="POST" class="register-form" id="register-form">                         
                            <div class="form-group">
                                <label for="email"><i class="zmdi zmdi-email"></i></label>
                                <input type="email" name="AdminUsername" id="AdminUsername" placeholder="Email adresi" />
                            </div>
                            <div class="form-group">
                                <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" name="AdminPassword" id="AdminPassword" placeholder="Şifre" />
                            </div>                          
                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Kayıt Ol" />
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="~/AdminLTE-3.0.4/colorlib-regform-7/images/signup-image.jpg" alt="sing up image"></figure>                       
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>
